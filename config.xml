<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap= "http://phonegap.com/ns/1.0"
	id= "br.com.wunderman.vivo.campusparty"
	version= "0.0.2">

	<name>Gap Version</name> 

	<description>
		Controle de versao
	</description>

	<author href="https://github.com/fpupor"
			email="fpupor@gmail.com">
	</author>
	
	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
